<style>
body{ background-color: LightSlateGray ; }
</style>

<div class="col-md-12">

  <div class="col-md-3">
  </div>

  <div class="col-md-6">


    <h2 style="text-align: center; color: black;">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, :label => 'EMAIL:', :wrapper_html => { :class => 'simstyle' }, :label_html => { :class => 'labelstyle' } %>
        <%= f.input :password, required: false, :label => 'PASSWORD:', :wrapper_html => { :class => 'simstyle' }, :label_html => { :class => 'labelstyle' } %>
        <!-- <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
      </div>

      <div class="form-actions btnstyle">
        <%= f.button :submit, "Log in" , class: "waves-effect waves-light btnstyle btn" %>
      </div>
    <% end %>

    <!-- <%= render "devise/shared/links" %> -->

    </div>

    <div class="col-md-3">
    </div>

</div>
