        </div>
      <br>
        <div class="input-field col s12">
          <%= f.input :password, required: false, :label => 'PASSWORD:', :wrapper_html => { :class => 'simstyle' }, :label_html => { :class => 'labelstyle' } %>
        </div>
      </div>


          <div class="form-actions">
            <%= f.button :submit, "Log in" , class: "waves-effect waves-light btnstyle btn pull-right" %>
          </div>


          <!-- <button class="btn waves-effect waves-light" type="submit" name="action">Submit
